{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "config": {
    "style": {
      "cell": {
        "stroke": "transparent"
      }
    }
  },
  "params": [
    {
      "name": "Year",
      "value": 2018,
      "bind": {
        "input": "range",
        "min": 2018,
        "max": 2024,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "vconcat": [{"data": {
    "url": "https://raw.githubusercontent.com/IndigoHarpy/FIT3179/main/Sex_Participation.csv"
  },
  "width": 400,
  "height": 200,
  "transform": [
    {
      "filter": {"param": "click"}
    }
  ],
  "layer":[
    {
      "mark": "line",
      "encoding": {
        "x": {
          "field": "Year",
          "timeUnit": "year",
          "axis": {"title": "Year", "tickCount": 10, "grid": false}
        },
        "y": {
          "field": "Participants",
          "type": "quantitative",
          "aggregate":"sum",
          "title": "Number of Soccer Players"
        },
        "color": {
          "field": "Sex",
          "type": "nominal",
          "scale": {
            "domain": [
              "Male",
              "Female",
              "Total"
            ],
            "range": [
              "#e41a1c",
              "#984ea3",
              "#ff7f00"
            ]
          },
          "legend":{"orient": "right"}         
        },
        "tooltip": [
          {"field": "Year", "timeUnit": "year", "title": "Year"},
          {"field": "Sex", "type": "ordinal", "title": "Soccer Player Sex"},
          {
            "field": "Participants", 
            "type": "quantitative", 
            "aggregate":"sum", 
            "title": "Number of Players", 
            "format": ","
          }
        ]
      }
    },
    {
      "data": {"values": [{}]},
      "mark": {"type": "rule", "strokeDash": [2, 2], "size": 2},
      "encoding": {"x": {"datum": {"year": 2020}}}
    },
    {
      "mark": {
        "type": "text", 
        "dx": 5,
        "fontSize": 11.5, 
        "fontStyle": "italic", 
        "align" : "left"
      },
      "transform": [
        {
          "filter": {"timeUnit": "year", "field":"Year", "equal": 2020}
        },
        {
          "calculate": "datum.Participants/4",
          "as": "quart_parts"
        },
        { 
          "aggregate": [{
            "op": "sum",
            "field": "quart_parts",
            "as": "y_value"
          }]
        }
      ],      
      "encoding": {
        "text": {"value": ["COVID-19"]},
        "x": {"datum": {"year": 2020}},
        "y": {"field": "y_value",
              "type": "quantitative"}     
      }
    }
  ]}, {
    "width": "container",
    "data": {
        "url": "https://raw.githubusercontent.com/IndigoHarpy/FIT3179/main/Australia_Soccer_Participation.csv"
    },
    "transform": [{
        "lookup": "State",
        "from": {
            "data": {
            "url": "https://raw.githubusercontent.com/IndigoHarpy/FIT3179/main/Australia_states.topojson",
            "format": {"type": "topojson", "feature": "STE_2016_AUST"}
            },
            "key": "properties.STE_NAME16",
            "fields": ["properties", "type", "geometry"]
        }
        },
        {"filter": "datum.Year == Year"},
        {
            "calculate": "datum.F_Participants/datum.Participants * 100",
            "as": "Proportion_F"
        }
        ],
        "projection": {"type": "conicEqualArea", "rotate": [230, 30, 0], "parallels": [10, 50]},
        "mark": {"type": "geoshape", "stroke": "black"},
        "encoding": {
            "color": {
            "field": "Proportion_F",
            "type": "quantitative",
            "bin": true,
            "scale": {"scheme": "greens"},
            "title": "Female Players (%)"
            },
            "opacity": {
            "condition": {
                "field": "State",
                "legend": null,
                "type": "nominal",
                "param": "click",
                "scale": {
                "domain": [
                    "Australian Capital Territory", 
                    "New South Wales",
                    "Northern Territory",
                    "Queensland",
                    "South Australia",
                    "Tasmania",
                    "Victoria",
                    "Western Australia"],
                "range": [1, 1, 1, 1, 1, 1, 1, 1]
                }
            },
            "value": 0.2
            },
            "tooltip": [
            {"field": "properties.STE_NAME16", "type": "nominal", "title": "State"},
            {"field": "Proportion_F", "type": "quantitative", "title": "Female Players (%)", "format":".2f"}
            ]
        },
        "params": [{
            "name": "click",
            "select": {"type": "point", "encodings": ["opacity"]}
        }]
  }]
}