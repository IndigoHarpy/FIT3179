{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "config": {
      "style": {
        "cell": {
          "stroke": "transparent"
        }
      }
    },
    "params": [{
      "name": "zoom_level",
      "value": 90,
      "bind": {
        "input": "range",
        "min": 90,
        "max": 500,
        "step": 10,
        "name": "Zoom: "
        }
      },
      {
        "name": "rotate_to",
        "value": [-20, 0, 0],
        "bind": {
          "input": "select",
          "options": [
            [-20, 0, 0],
            [90, 0, 0]
          ],
          "labels": ["Europe", "North America"],
          "name": "Map Centre: "
        }
      }
    ],
    "vconcat": [
      {
        "width": 500,
        "height": 300,
        "title": "Domestic Players",
        "projection": {
          "type": "equalEarth", 
          "rotate": {"expr": "rotate_to"},
          "center": [0, 90],
          "scale": {"expr": "zoom_level"}
        },
        "layer": [
          {
            "data": {
              "url": "https://raw.githubusercontent.com/IndigoHarpy/FIT3179/main/WorldMapWithGraticules.topojson",
              "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
            },
            "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
          },
          {
            "data": {
              "url": "https://raw.githubusercontent.com/IndigoHarpy/FIT3179/main/WorldMapWithGraticules.topojson",
              "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
            },
            "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
          },
          {
            "data": {
              "url": "https://raw.githubusercontent.com/IndigoHarpy/FIT3179/main/Country_Data.csv"
            },
            "transform": [{
                "calculate": "datum.Domestic * datum.Players / 100",
                "as": "Domestic Players"
            }],
            "mark": {"type": "circle", "tooltip": {"content": "data"}},
            "encoding": {
              "longitude": {"field": "longitude", "type": "quantitative"},
              "latitude": {"field": "latitude", "type": "quantitative"},
              "size": {
                "field": "Domestic",
                "type": "quantitative",
                "title": "Players (%)",
                "scale": {"rangeMax": 150}
              },
              "tooltip": [
                {"field": "Country", "type": "nominal"},
                {"field": "Domestic Players", "type": "quantitative", "format": ","},
                {"field": "Domestic", "type": "quantitative", "title": "Percentage of Professional Players"}
            ]}
          }
        ]
      },
      {
        "width": 500,
        "height": 300,
        "title": "Foreign Players",
        "projection": {
          "type": "equalEarth", 
          "rotate": {"expr": "rotate_to"},
          "center": [0, 90],
          "scale": {"expr": "zoom_level"}},
        "layer": [
          {
            "data": {
              "url": "https://raw.githubusercontent.com/IndigoHarpy/FIT3179/main/WorldMapWithGraticules.topojson",
              "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
            },
            "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
          },
          {
            "data": {
              "url": "https://raw.githubusercontent.com/IndigoHarpy/FIT3179/main/WorldMapWithGraticules.topojson",
              "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
            },
            "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
          },
          {
            "data": {
              "url": "https://raw.githubusercontent.com/IndigoHarpy/FIT3179/main/Country_Data.csv"
            },
            "transform": [{
                "calculate": "datum.Foreign * datum.Players / 100",
                "as": "Foreign Players"
            }],
            "mark": {"type": "circle", "tooltip": {"content": "data"}},
            "encoding": {
              "longitude": {"field": "longitude", "type": "quantitative"},
              "latitude": {"field": "latitude", "type": "quantitative"},
              "size": {
                "field": "Foreign",
                "type": "quantitative",
                "title": "Players (%)",
                "scale": {"rangeMax": 150}
              },
              "tooltip": [
                {"field": "Country", "type": "nominal"},
                {"field": "Foreign Players", "type": "quantitative", "format": ","},
                {"field": "Foreign", "type": "quantitative", "title": "Percentage of Professional Players"}
            ]}
          }
        ]
      }
    ]
  }