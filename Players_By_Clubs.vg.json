{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "data": {
    "url": "https://raw.githubusercontent.com/IndigoHarpy/FIT3179/main/Players_Clubs_Country.csv"
  },
  "params": [
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.Clubs > 0"},
    {"filter": "datum.Players > 0"},
    {
      "filter": "Continent_selection == null || datum.Continent == Continent_selection"
    },
    {
      "calculate": "datum.Players/datum.Population * 10000",
      "as": "Professional Soccer Players per 10,000 Population"
    }
  ],
  "encoding": {
    "x": {
      "field": "Clubs",
      "type": "quantitative",
      "title": "Professional Clubs",
      "axis": {"tickCount": 7}
    },
    "y": {
      "field": "Players",
      "type": "quantitative",
      "title": "Professional Men's Players"
    }
  },
  "layer": [
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "bottom",
        "dx": 5,
        "dy": -5,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Country", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Country'] == 'Mexico' || datum['Country'] == 'Spain' || datum['Country'] == 'Japan' ||  datum['Country'] == 'Brazil'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Players", "type": "quantitative", "title":"Professional Male Soccer Players", "format": ","},
          {"field": "Clubs", "type": "quantitative", "title":"Professional Clubs", "format": ","},
          {
            "field": "Professional Soccer Players per 10,000 Population",
            "type": "quantitative",
            "format": ".2f"
          }
        ]
      }
    },
    {
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "Population",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
            "range": [10, 50, 150, 200, 300, 400]
          },
          "legend": {"format": ".1s"}
        },
        "color": {
          "field": "Continent",
          "type": "nominal",
          "scale": {
            "domain": [
              "North America",
              "South America",
              "Europe",
              "Africa",
              "Asia",
              "Oceania"
            ],
            "range": [
              "#e41a1c",
              "#984ea3",
              "#ff7f00",
              "#a6cee3",
              "#377eb8",
              "#a65628"
            ]
          }
        },
        "opacity": {"value": 0.6},
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Players", "type": "quantitative", "title":"Professional Male Soccer Players", "format": ","},
          {"field": "Clubs", "type": "quantitative", "title":"Professional Clubs", "format": ","},
          {
            "field": "Professional Soccer Players per 10,000 Population",
            "type": "quantitative",
            "format": ".2f"
          }
        ]
      }
    }
  ]
}