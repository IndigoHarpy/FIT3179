{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 300,
  "data": {
    "url": "https://raw.githubusercontent.com/IndigoHarpy/FIT3179/main/Players_Clubs_Country.csv"
  },
  "params": [
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.Clubs > 0"},
    {"filter": "datum.Players > 0"},
    {
      "filter": "Continent_selection == null || datum.Continent == Continent_selection"
    },
    {
      "calculate": "datum.Players/datum.Population * 10000",
      "as": "Players (per 10,000 people)"
    }
  ],
  "encoding": {
    "x": {
      "field": "Clubs",
      "type": "quantitative",
      "title": "Professional Clubs",
      "axis": {"tickCount": 7}
    },
    "y": {
      "field": "Players",
      "type": "quantitative",
      "title": "Professional Men's Players"
    }
  },
  "layer": [
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "bottom",
        "dx": 5,
        "dy": -5,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Country", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Country'] == 'Mexico' || datum['Country'] == 'Spain' || datum['Country'] == 'Japan' ||  datum['Country'] == 'Brazil'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Players", "type": "quantitative", "format": ","},
          {"field": "Clubs", "type": "quantitative", "format": ","},
          {
            "field": "Players (per 10,000 people)",
            "type": "quantitative",
            "format": ".2f"
          }
        ]
      }
    },
    {
      "mark": "circle",
      "params": [{
        "name": "continent_highlight",
        "select": {"type": "point", "fields": ["Continent"]},
        "bind": "legend"
      }],
      "encoding": {
        "size": {
          "field": "Population",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
            "range": [10, 50, 150, 200, 300, 400]
          },
          "legend": {"format": ".1s"}
        },
        "color": {
          "field": "Continent",
          "type": "nominal",
          "scale": {
            "domain": [
              "North America",
              "South America",
              "Europe",
              "Africa",
              "Asia",
              "Oceania"
            ],
            "range": [
              "#cc79a7",
              "#e41a1c",
              "#ff7f00",
              "#efc100",
              "#377eb8",
              "#00316e"
            ]
          }
        },
        "opacity": {
          "condition": {"param": "continent_highlight", "value": 0.8},
          "value": 0.2
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Players", "type": "quantitative", "title":"Players", "format": ","},
          {"field": "Clubs", "type": "quantitative", "title":"Clubs", "format": ","},
          {
            "field": "Players (per 10,000 people)",
            "type": "quantitative",
            "format": ".2f"
          }
        ]
      }
    }
  ]
}