{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "config": {
      "style": {
        "cell": {
          "stroke": "transparent"
        }
      }
    },
    "vconcat": [
      {
        "width": 500,
        "height": 300,
        "title": "Domestic Players",
        "projection": {"type": "equalEarth"},
        "layer": [
          {
            "data": {
              "url": "https://raw.githubusercontent.com/IndigoHarpy/FIT3179/main/europe.topojson",
              "format": {"type": "topojson", "feature": "europe"}
            },
            "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
          },
          {
            "data": {
              "url": "https://raw.githubusercontent.com/IndigoHarpy/FIT3179/main/Country_Data.csv"
            },
            "transform": [{
                "calculate": "datum.Domestic * datum.Players / 100",
                "as": "Domestic Players"
              }, {
                "filter": "datum.Continent == 'Europe'"
              }
            ],
            "mark": {"type": "circle", "tooltip": {"content": "data"}},
            "encoding": {
              "longitude": {"field": "longitude", "type": "quantitative"},
              "latitude": {"field": "latitude", "type": "quantitative"},
              "size": {
                "field": "Domestic Players",
                "type": "quantitative",
                "title": "Number of Players"
              },
              "tooltip": [
                {"field": "Country", "type": "nominal"},
                {"field": "Domestic Players", "type": "quantitative", "format": ","},
                {"field": "Domestic", "type": "quantitative", "title": "Percentage of Professional Players"}
            ]}
          }
        ]
      },
      {
        "width": 500,
        "height": 300,
        "title": "Foreign Players",
        "projection": {"type": "equalEarth"},
        "layer": [
          {
            "data": {
              "url": "https://raw.githubusercontent.com/IndigoHarpy/FIT3179/main/europe.topojson",
              "format": {"type": "topojson", "feature": "europe"}
            },
            "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
          },
          {
            "data": {
              "url": "https://raw.githubusercontent.com/IndigoHarpy/FIT3179/main/Country_Data.csv"
            },
            "transform": [{
                "calculate": "datum.Foreign * datum.Players / 100",
                "as": "Foreign Players"
              }, {
                "filter": "datum.Continent == 'Europe'"
              }
            ],
            "mark": {"type": "circle", "tooltip": {"content": "data"}},
            "encoding": {
              "longitude": {"field": "longitude", "type": "quantitative"},
              "latitude": {"field": "latitude", "type": "quantitative"},
              "size": {
                "field": "Foreign Players",
                "type": "quantitative",
                "title": "Number of Players"
              },
              "tooltip": [
                {"field": "Country", "type": "nominal"},
                {"field": "Foreign Players", "type": "quantitative", "format": ","},
                {"field": "Foreign", "type": "quantitative", "title": "Percentage of Professional Players"}
            ]}
          }
        ]
      }
    ]
  }