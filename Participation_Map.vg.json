{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "config": {
    "style": {
      "cell": {
        "stroke": "transparent"
      }
    }
  },
  "width": "container",
  "data": {
    "url": "https://raw.githubusercontent.com/IndigoHarpy/FIT3179/main/Australia_Soccer_Participation.csv"
  },
  "params": [
    {
      "name": "Year",
      "value": 2018,
      "bind": {
        "input": "range",
        "min": 2018,
        "max": 2024,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "transform": [{
    "calculate": "datum.F_Participants/datum.Participants * 100",
    "as": "Proportion_F"
  }],
  "layer": [
    {
      "transform": [
        {
          "lookup": "State",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/IndigoHarpy/FIT3179/main/Australia_states.topojson",
              "format": {"type": "topojson", "feature": "STE_2016_AUST"}
            },
            "key": "properties.STE_NAME16",
            "fields": ["properties", "type", "geometry"]
          }
        },
        {"filter": "datum.Year == Year"}
      ],
      "projection": {"type": "conicEqualArea", "rotate": [230, 30, 0], "parallels": [10, 50]},
      "mark": {"type": "geoshape", "stroke": "black"},
      "encoding": {
        "color": {
          "field": "Proportion_F",
          "type": "quantitative",
          "bin": true,
          "scale": {"scheme": "greens"},
          "title": ["Female Players (%)"]
        },
        "tooltip": [
          {"field": "properties.STE_NAME16", "type": "nominal", "title": "State"},
          {"field": "Proportion_F", "type": "quantitative", "title": "Female Players (%)", "format":".2f"}
        ]
      }
    }
  ]
}