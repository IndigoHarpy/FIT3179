{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "repeat": ["Outdoor", "Outdoor_F", "Futsal", "Futsal_F", "Social", "Social_F"],
    "columns": 2,
    "spec":{
        "width": 400,
        "height": 250,
        "layer": [{
            "data": {
                "url": "https://raw.githubusercontent.com/IndigoHarpy/FIT3179/main/Australia_Soccer_Participation.csv"
            },
            "mark": "line",
            "encoding": {
                "x": {
                "field": "Year",
                "timeUnit": "year",
                "title":"Year"
                },
                "y": {
                "field": {"repeat": "repeat"},
                "type": "quantitative",
                "aggregate": "sum",
                "title": "Number of Players"
                },
                "color": {
                "field": "State",
                "type": "nominal",
                "scale": {
                    "domain": [
                    "Australian Capital Territory",
                    "New South Wales",
                    "Northern Territory",
                    "Queensland",
                    "South Australia",
                    "Tasmania",
                    "Victoria",
                    "Western Australia"
                    ],
                    "range": [
                    "#77aadd",
                    "#99ddff",
                    "#44bb99",
                    "#bbcc33",
                    "#aaaa00",
                    "#eedd88",
                    "#ee8866",
                    "#ffaabb"
                    ]
                },
                "legend":{"orient": "bottom"}         
                },
                "tooltip": [
                {"field": "Year", "timeUnit": "year", "title": "Year"},
                {"field": "State", "type": "nominal"},
                {
                    "field": {"repeat": "repeat"}, 
                    "type": "quantitative", 
                    "aggregate":"sum", 
                    "title": "Number of Players", 
                    "format": ","
                }
                ]
            }
        },
        {
            "data": {
                "values": [{
                    "Outdoor": "Sport: Outdoor Soccer", 
                    "Outdoor_F": "Sport: Women's Outdoor Soccer", 
                    "Futsal": "Sport: Futsal", 
                    "Futsal_F": "Sport: Women's Futsal", 
                    "Social": "Sport: Social Soccer", 
                    "Social_F": "Sport: Women's Social Soccer"
                }]
            },
            "mark": {
                "type": "text",
                "align": "right",
                "baseline": "bottom",
                "x": "width",
                "y": 0
            },
            "encoding": {
                "text": { "field": { "repeat": "repeat" } }
            }
        }
    ]
    }
  }