{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "repeat": ["Outdoor", "Outdoor_F", "Futsal", "Futsal_F", "Social", "Social_F"],
    "columns": 2,
    "spec":{
        "width": 400,
        "height": 250,
        "data": {
            "url": "https://raw.githubusercontent.com/IndigoHarpy/FIT3179/main/Australia_Soccer_Participation.csv"
        },
        "mark": "line",
        "encoding": {
            "x": {
            "field": "Year",
            "timeUnit": "year",
            "title":"Year"
            },
            "y": {
            "field": {"repeat": "repeat"},
            "type": "quantitative",
            "aggregate": "sum",
            "title": "Number of Players"
            },
            "color": {
            "field": "State",
            "type": "nominal",
            "scale": {
                "domain": [
                "Australian Capital Territory",
                "New South Wales",
                "Northern Territory",
                "Queensland",
                "South Australia",
                "Tasmania",
                "Victoria",
                "Western Australia"
                ],
                "range": [
                "#77aadd",
                "#99ddff",
                "#44bb99",
                "#bbcc33",
                "#aaaa00",
                "#eedd88",
                "ee8866",
                "ffaabb"
                ]
            },
            "legend":{"orient": "bottom"}         
            },
            "tooltip": [
            {"field": "Year", "timeUnit": "year"},
            {"field": "State", "type": "nominal"},
            {
                "field": {"repeat": "repeat"}, 
                "type": "quantitative", 
                "aggregate":"sum", 
                "title": "Number of Players", 
                "format": ","
            }
            ]
        }
    }
  }